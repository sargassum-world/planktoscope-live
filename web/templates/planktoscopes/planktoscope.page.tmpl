{{template "shared/base.layout.tmpl" .}}

{{define "title"}}Planktoscope {{.Data.Planktoscope.Name}}{{end}}
{{define "description"}}Planktoscope {{.Data.Planktoscope.Name}}.{{end}}

{{define "content"}}
  <main class="main-container" tabindex="-1" data-controller="default-scrollable">
    <nav class="breadcrumb main-breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><a href="/">Fluitans</a></li>
        <li><a href="/planktoscopes">Planktoscopes</a></li>
        <li class="is-active"><a href="/planktoscopes/{{.Data.Planktoscope.Name}}" aria-current="page">{{.Data.Planktoscope.Name}}</a></li>
      </ul>
    </nav>

    <section class="section content">
      <h1>Planktoscope {{.Data.Planktoscope.Name}}</h1>
      <turbo-frame id="planktoscope-{{.Data.Planktoscope.Name}}-info">
        <p>{{.Data.Planktoscope.Description}}</p>
        <img src="{{.Data.Planktoscope.MJPEGStream}}" crossorigin>
        {{if .Auth.Identity.Authenticated}}
          <p>
            TODO: advanced remote control panel (demo with toggling light)
          </p>
        {{end}}
      </turbo-frame>
    </section>
  </main>
{{end}}
